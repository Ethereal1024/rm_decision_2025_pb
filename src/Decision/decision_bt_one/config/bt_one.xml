<root BTCPP_format="4">

    <BehaviorTree ID="MainTree">
        <RetryUntilSuccessful num_attempts="-1"> 
            <SequenceWithMemory>
                <SubTree ID="WaitForStart"/>
                <Spin speed="0"/>
                <HPLow threshold="390"/>
                <Spin speed="-2"/>
                <!-- <SubTree ID="AttackOutpost"/> -->
            </SequenceWithMemory>
        </RetryUntilSuccessful>
    </BehaviorTree>

    <BehaviorTree ID="WaitForStart">
        <RetryUntilSuccessful num_attempts="-1"> 
            <GameRunning/>
        </RetryUntilSuccessful>
    </BehaviorTree>

    <BehaviorTree ID="AttackOutpost">
        <Sequence>
            <RotateToAngle targetAngle="0.76"/>
            <NavToPoint targetPoint="8.4;5.7"/>
            <Fallback>
                <Sequence name="basic_sequence">
                    <MoveToPoint targetPoint="12.0;6.1"/>
                    <NavToPoint targetPoint="11.0;6.0"/>
                    <Spin speed="3.14"/>
                </Sequence>
                <RetryUntilSuccessful num_attempts="3">
                    <Sequence name="retry_sequence">
                        <MoveToPoint targetPoint="8.4;5.7"/>
                        <RotateToAngle targetAngle="0.75"/>
                        <MoveToPoint targetPoint="12.0;6.1"/>
                        <NavToPoint targetPoint="11.0;6.0"/>
                        <Spin speed="3.14"/>
                    </Sequence>
                </RetryUntilSuccessful>
            </Fallback>
        </Sequence>
    </BehaviorTree>

    <BehaviorTree ID="OccupyHighGround">
        <Sequence>
            <RotateToAngle targetAngle="0.75"/>
            <MoveToPoint targetPoint="?;?"/>
        </Sequence>
    </BehaviorTree>

</root>

